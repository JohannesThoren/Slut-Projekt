  <body class="prim-bg-color">
    <header id="header">
      <nav class="navbar navbar-expand-lg navbar-dark prim-color">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Thor√©n</a>
  
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
  
          <!-- The nav bar is created as following -->
          <!-- FUCKING REMEMBER THIS JOHANNES -->
  
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/About">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/blog">Blog</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                  data-bs-toggle="dropdown" aria-expanded="false">
                  Portfolio
                </a>
                <ul class="dropdown-menu  sec-bg-color" aria-labelledby="navbarDropdownMenuLink">
                  <li>
                    <a class="dropdown-item prim-fg-color" href="/portfolio">Overview</a>
                  </li>
                  <li>
                    <a class="dropdown-item prim-fg-color" href="/portfolio/rust">Rust</a>
